<?xml version="1.0" encoding="utf-8" ?>
<widget id="VectorGauge.widget.VectorGauge" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>VectorGauge</name>
    <description>A gauge showing a value between a minimum and maximum.</description>
    <icon></icon>

    <properties>
        <property key="ColorPrimaryAttr" type="attribute" required="false">
            <caption>Primary Color</caption>
            <category>Appearance</category>
            <description>The primary color of the widget.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="valueAttr" type="attribute" required="true" defaultValue="">
            <caption>Value</caption>
            <category>Appearance</category>
            <description>Current value for the gauge.</description>
            <attributeTypes>
                <attributeType name="Integer" />
            </attributeTypes>
        </property>
        <property key="minValueAttr" type="attribute" required="true">
            <caption>minimum value</caption>
            <category>Appearance</category>
            <description>Minimum value for the gauge.</description>
            <attributeTypes>
                <attributeType name="Integer" />
            </attributeTypes>
        </property>
        <property key="maxValueAttr" type="attribute" required="true">
            <caption>maximum value</caption>
            <category>Appearance</category>
            <description>Maximum value for the gauge.</description>
            <attributeTypes>
                <attributeType name="Integer" />
            </attributeTypes>
        </property>
        <property key="showValueAttr" type="boolean" defaultValue="true">
    			<caption>Display value</caption>
    			<category>Appearance</category>
    			<description>Display the value in the gauge.</description>
    		</property>
        <property key="mfToExecute" type="microflow" required="false" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>The microflow to execute on click.</description>
            <returnType type="Boolean" />
        </property>
    </properties>
</widget>

